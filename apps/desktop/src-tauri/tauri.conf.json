{
	"build": {
		"beforeBuildCommand": "make build-desktop",
		"distDir": "../build"
	},
	"package": {
		"productName": "Periotable",
		"version": "../package.json"
	},
	"tauri": {
		"allowlist": {
			"all": true
		},
		"bundle": {
			"active": true,
			"category": "Education",
			"copyright": "CC BY-NC-SA 4.0",
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			],
			"identifier": "com.periotable.edu",
			"longDescription": "A UI/UX friendly application to learn more about Modern Periodic Table of Elements",
			"shortDescription": "A UI/UX friendly application to learn more about Modern Periodic Table of Elements",
			"resources": [],
			"targets": "all",
			"windows": {
				"certificateThumbprint": null,
				"digestAlgorithm": "sha256",
				"timestampUrl": ""
			},
			"macOS": {
				"entitlements": null,
				"exceptionDomain": "",
				"frameworks": [],
				"providerShortName": null,
				"signingIdentity": null
			}
		},
		"security": {
			"csp": null
		},
		"updater": {
			"active": false
		},
		"windows": [
			{
				"maximized": true,
				"title": "Periotable"
			}
		]
	}
}
